<?xml version="1.0"?>
<fop version="1.0">
    <font-base>.</font-base>
    <prefer-renderer>true</prefer-renderer>
    <renderers>
        <renderer mime="application/pdf">
            <fonts>
                <font kerning="yes" embed-url="verdana.ttf">
                    <font-triplet name="verdana" style="normal" weight="normal"/>
                </font>
                <font kerning="yes" embed-url="verdanab.ttf">
                    <font-triplet name="verdana" style="normal" weight="bold"/>
                </font>
                <font kerning="yes" embed-url="arial.ttf">
                    <font-triplet name="arial" style="normal" weight="normal"/>
                </font>
                <font kerning="yes" embed-url="arialbd.ttf">
                    <font-triplet name="arial_Bold" style="normal" weight="normal"/>
                </font>
                <font kerning="yes" embed-url="gotham.ttf">
                    <font-triplet name="gotham" style="normal" weight="normal"/>
                </font>
                <font kerning="yes" embed-url="knockout.ttf">
                    <font-triplet name="knockout" style="normal" weight="normal"/>
                </font>
            </fonts>
        </renderer>
    </renderers>
</fop>

